doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel="shortcut icon" href="/favicon.ico" type="image/x-icon")
    link(rel="icon" href="/favicon.ico" type="image/x-icon")
    script(src='/javascripts/update.js')
    script(src='http://cdn.rawgit.com/h2non/jsHashes/master/hashes.js')

  body(onload='updateUser()')
    block content
      h1= title
      hr
      div(class='manager' style='margin-bottom: 5px;')
        table(cellpadding="0" cellspacing="0" border="0")
          if registered=='true'
            br
            h3= fullName
            tr
              th(class="tbl-header")= 'Username'
              td(class="tbl-content")= username
          else 
            br
            h3 NOT REGISTERED
          tr
            th(class="tbl-header")= 'User ID'
            td(class="tbl-content")= _id
          tr
            th(class="tbl-header")= 'Address'
            td(class="tbl-content")= fullAddress
          tr
            th(class="tbl-header")= 'Member Type'
            td(class="tbl-content")= memberType
          tr
            th(class="tbl-header")= 'Consumption'
            td(class="tbl-content")= consumption

          if memberType != 'Consumer'
            tr
              th(class="tbl-header")= 'Production'
              td(class="tbl-content")= production

      if memberType != 'Consumer' && blocked=='0'    
        // BLOCKING THE PROSUMER FROM SELLING
        form(style='margin-left:22%' action='/manager/accounts/block' class="app-button" method='POST' id='block' onsubmit='blockUser(event)')
          input(style='display:none;' type='text' name='registered' placeholder='registered')
          input(style='display:none;' type='text' name='fullName' placeholder='fullName')
          input(style='display:none;' type='text' name='username' placeholder='username')
          input(style='display:none;' type='text' name='_id' placeholder='_id')
          input(style='display:none;' type='text' name='fullAddress' placeholder='fullAddress')
          input(style='display:none;' type='text' name='memberType' placeholder='memberType')   
          input(style='display:none;' type='text' name='_manager' placeholder='_manager')            

          input(type="submit"  value="BLOCK SELL")
      else
        // AUXILIAR POSITIONAL FORM
        form(style='visibility:hidden; margin-left:22%' class="app-button")
          input(style='display:none;' type='text' name='_id' placeholder='_id')
          input(style='visibility:hidden;' type="submit"  value="BLOCK SELL")

      // ROUTING TO THE USER ACCOUNTS' PAGE
      form(action='/manager/accounts' class="app-button" method='POST' id='backManager' onsubmit='toAccounts(event)')
        label(style='display:none;' id='_id')=_manager
        input(style='display:none;' type='text' name='_id' placeholder='_id')
        input(type="submit" value="BACK")

      // UPDATING THE USER'S PAGE
      form(style='display:none;' action='/manager/accounts/update' method='POST' id='getUser')
        input(style='display:none;' type='text' name='registered' placeholder='registered')
        input(style='display:none;' type='text' name='fullName' placeholder='fullName')
        input(style='display:none;' type='text' name='username' placeholder='username')
        input(style='display:none;' type='text' name='_id' placeholder='_id')
        input(style='display:none;' type='text' name='fullAddress' placeholder='fullAddress')
        input(style='display:none;' type='text' name='memberType' placeholder='memberType')   
        input(style='display:none;' type='text' name='_manager' placeholder='_manager')    

        input(style='display:none;' type='submit')